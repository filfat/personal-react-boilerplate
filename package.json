{
    "name": "personal-boilerplate",
    "version": "1.0.0",
    "private": true,
    "dependencies": {
        "axios": "^0.18.0",
        "node-sass-chokidar": "1.3.4",
        "npm-run-all": "^4.1.5",
        "pre-commit": "^1.2.2",
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "react-helmet": "^5.2.0",
        "react-router": "^5.0.0",
        "react-router-dom": "^5.0.0",
        "react-scripts": "2.1.8"
    },
    "scripts": {
        "build-css": "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",
        "watch-css": "npm run build-css && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive",
        "start-js": "react-scripts start",
        "start": "npm-run-all -p watch-css start-js",
        "build-js": "react-scripts build",
        "build": "npm-run-all build-css build-js",
        "test-eslint": "node_modules/.bin/eslint --ext=js --ext=jsx ./src",
        "test": "npm run test-eslint && react-scripts test --env=jsdom",
        "eject": "react-scripts eject",
        "create-component": "node ./tools/create-component.js",
        "create-view": "node ./tools/create-view.js"
    },
    "devDependencies": {
        "eslint-config-react-app": "^3.0.8",
        "eslint-plugin-flowtype": "^3.6.0",
        "eslint-plugin-import": "^2.16.0",
        "eslint-plugin-jsx-a11y": "^6.2.1",
        "eslint-plugin-node": "^8.0.1",
        "eslint-plugin-promise": "^4.1.1",
        "eslint-plugin-react": "^7.12.4",
        "node-sass": "^4.11.0",
        "sass-loader": "^7.1.0"
    },
    "pre-commit": [
        "build"
    ],
    "browserslist": [
        ">2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ]
}
